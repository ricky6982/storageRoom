{% verbatim %}
<div class="well col-sm-10 col-sm-offset-1">
    <legend>Productos a Comprar</legend>

    <div class="form-inline row">
        <div class="col-sm-5 col-sm-offset-1">
            <div class="input-group">
                <div class="input-group-addon">Producto</div>
                <input type="text" class="form-control" id="productoNombre" ng-model="productoNuevo.nombre">
            </div>
        </div>

        <div class="col-sm-3">
            <div class="input-group">
                <div class="input-group-addon">$</div>
                <input type="number" class="form-control" id="productoPrecio" ng-model="productoNuevo.precio">
            </div>
        </div>
        
        <div class="col-sm-3">
            <button type="button" class="btn btn-primary" ng-click="agregarProducto()">Agregar Producto</button>
        </div>
    </div>
    
    <br>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>NÂº</th>
                <th>Producto</th>
                <th>Costo</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="producto in productos track by $index">
                <td>{{ $index + 1 }}</td>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.precio }}</td>
                <td><button type="button" class="btn btn-xs btn-danger" ng-click="quitarProducto($index)"><span class="glyphicon glyphicon-trash"></span></button></td>
            </tr>
        </tbody>
    </table>

    <div class="pull-right">
        <div class="lead">Gasto Total: <em>{{ gastoTotal() | currency }}</em></div>
    </div>
</div>
{% endverbatim %}
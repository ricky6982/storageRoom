{% extends '::base.html.twig' %}

{% block titulo %}Eventos Festivos{% endblock %}

{% block contenido %}
    <legend>
        Historial de Eventos Festivos
        <div class="pull-right">
            <a href="{{ path('evento_festivo_crear') }}" class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-plus"></span> Crear Evento Festivo</a>
        </div>
    </legend>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Nº</th><th>Evento Festivo</th><th>Fecha</th><th>Cantidad de Participantes</th><th>Recaudación</th><th>Gasto</th><th>Saldo</th>
                </tr>
            </thead>
            <tbody>
                {% for item in [0,1,2,3,4,56,6,7] %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ item }}</td>
                    <td>{{ item }}</td>
                    <td>{{ item }}</td>
                    <td>{{ item }}</td>
                    <td>{{ item }}</td>
                    <td>{{ item }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

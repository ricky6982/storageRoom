{% extends '::base.html.twig' %}

{% block titulo %} {{ evento.titulo }} {% endblock %}

{% block contenido %}
    <h3 class="text-right">Fecha: {{ evento.fecha | date('d-m-Y') }}</h3>
    <div class="row">
        <div class="col-sm-5">
            <blockquote>
                <legend>Resumen</legend>
                <table class="table table-striped table-bordered">
                    <tr>
                        <td>Gasto Total</td><td><strong>$ </strong>{{ evento.gasto }}</td>
                    </tr>
                    <tr>
                        <td>Saldo Anterior</td><td><strong>$ </strong>{{ saldo.monto }}</td>
                    </tr>
                    <tr>
                        <td>Recaudación</td><td><strong>$ </strong>{{ evento.recaudacion }}</td>
                    </tr>
                    <tr>
                        <td>Saldo Total</td>
                        <td>
                            <strong>$ </strong>{{ evento.recaudacion + saldo.monto - evento.gasto  }}
                        </td>
                    </tr>
                </table>

            </blockquote>
            <blockquote>
                <legend>Participantes</legend>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Nº</th><th>Apellido y Nombre</th><th>Aporte($)</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for participante in evento.participantes %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td><strong>$ </strong>{{ participante.persona.apellido }}, {{ participante.persona.nombre }}</td>
                            <td>
                                <strong>$ </strong>{{ (evento.recaudacion / (evento.participantes | length)) | number_format(2,',','.')}}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </blockquote>
            <div class="col-sm-7">
                <!-- Funcionalidad Subir Imagenes -->
            </div>
        </div>
    </div>
{% endblock %}